<!DOCTYPE html>

<html>
<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>

<body>

    <!-- Header -->
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark px-5">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="https://getbootstrap.com/docs/5.0/assets/brand/bootstrap-logo.svg" alt="" width="30" height="24">
            </a>
            <a class="navbar-brand text-light" href="~/Sellers" style="font-weight: bold">Lapshop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                </ul>
                <a asp-action="Create" asp-controller="Laptops" class="btn btn-success">
                    <i class="bi bi-plus-circle-fill"></i>
                    Sell Laptop
                </a>
                <a asp-action="Create" asp-controller="Accessories" class="btn btn-primary mx-3">
                    <i class="bi bi-plus-circle-fill"></i>
                    Sell Accessory
                </a>
            </div>
        </div>
    </nav>
    <!--End Header-->
    <!--Sidebar-->
    <div class="seller_sidebar bg-light">
        <a href="~/Sellers">
            <i class="bi bi-speedometer2"></i>
            Dashboard
        </a>
        <div class="dropdown">
            <a class="dropdown-toggle text-dark" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="bi bi-diagram-3"></i>
                Laptops
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                <a class="dropdown-item text-dark" href="~/Laptops/Create">Sell Laptop</a>
                <a class="dropdown-item text-dark" href="~/Laptops/Index">My Laptops</a>
            </div>
        </div>
        <div class="dropdown">
            <a class="dropdown-toggle text-dark" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="bi bi-tags"></i>
                Accessories
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                <a class="dropdown-item text-dark" href="~/Accessories/Create">Sell Accessory</a>
                <a class="dropdown-item text-dark" href="~/Accessories/Index">My Accessories</a>
            </div>
        </div>
        <div class="dropdown">
            <a class="dropdown-toggle text-dark" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="bi bi-person-circle"></i>
                Account
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                <a class="dropdown-item text-dark" href="~/Admin/Logout">
                    <i class="bi bi-box-arrow-left"></i>
                    Logout
                </a>
            </div>
        </div>
    </div>
    <!-- End Sidebar -->
    <!-- Page Content -->
    <div class="seller_content px-3 py-3">
        @RenderBody()
    </div>
    <!-- End Page Content -->
    <!-- footer section -->
    <footer class="text-center text-lg-start bg-dark text-muted fixed-bottom py-1">
        <!-- Copyright -->
        © @DateTime.Now.Year Copyright:
        <a class="text-reset fw-bold" href="#">Mostafa Saad</a>
        <!-- Copyright -->
    </footer>
    <!-- end footer section -->


    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
</body>
</html>