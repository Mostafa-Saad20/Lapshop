@model Lapshop.Models.Order

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
</section>
<!-- End Banner Area -->

<!--================Checkout Area =================-->
<section class="checkout_area section_gap">
    <div class="container">
        <div class="cupon_area">
            <div class="check_title">
                <h2>Have a coupon? </h2>
            </div>
            <input type="text" placeholder="Enter coupon code">
            <a class="tp_btn" href="#">Apply Coupon</a>
        </div>
        <div class="billing_details">
            <div class="row">
                <div class="col-lg-8">
                    <!-- Billing details form -->
                    <h3>Customer Information</h3>
                    <form class="row contact_form" asp-action="Create" asp-controller="Orders" method="post">
                        <div class="col-md-6 form-group">
                            <input asp-for="FirstName" placeholder="First Name" class="form-control">
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <input class="form-control" id="last" asp-for="LastName" placeholder="Last Name">
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <input class="form-control" id="number" asp-for="Phone" placeholder="Phone Number">
                            <span class="text-danger" asp-validation-for="Phone"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <input class="form-control" id="email" asp-for="Email" placeholder="Email">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <h3 class="mt-3 ml-3">Shipping Details</h3>
                        <div class="col-md-12 form-group p_star">
                            <select class="country_select">
                                <option value="">Select Country</option>
                                <option value="1">Egypt</option>
                                <option value="2">Kuwait</option>
                                <option value="3">Saudi Arabia</option>
                                <option value="4">United Arab Emarates</option>
                            </select>
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" id="city" name="city" placeholder="Town/City">
                            <span class="placeholder" data-placeholder="Town/City"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input class="form-control" id="add1" asp-for="Address1" placeholder="Address line 01">
                            <span class="text-danger" asp-validation-for="Address1"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input class="form-control" id="add2" asp-for="Address2" placeholder="Address line 02">
                            <span class="text-danger" asp-validation-for="Address2"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input class="form-control" id="zip" asp-for="ZIPCode" placeholder="Postcode/ZIP">
                        </div>

                        <h3 class="mt-3 ml-3">Payment method</h3>
                        <hr>
                        <div class="payment_item col-md-12">
                            <div class="radion_btn">
                                <input type="radio" id="f-option5" value="Cash" name="PaymentMethod">
                                <label for="f-option5">Cash on delivery</label>
                                <div class="check"></div>
                            </div>
                            <p>You can Pay Cash when you receive the order.</p>
                        </div>

                        <div class="col-md-12">
                            <input type="submit" class="btn btn-warning" value="Proceed to Payment">
                        </div>
                    </form>
                </div>

                <!-- Order Details -->
                <div class="col-lg-4">
                    <div class="order_box">
                        <h2>Your Order</h2>
                        <div class="table-responsive">
                            <table>
                                <tbody>
                                    <tr>
                                        <th class="pr-3">Product</th>
                                        <th class="pr-3">Price</th>
                                        <th class="pr-3">Quantity</th>
                                        <th class="pr-3">Subtotal</th>
                                    </tr>
                                    <!-- Order item -->
                                    @if (ViewBag.OrderDetails != null) 
                                    {
                                        foreach (var item in ViewBag.OrderDetails)
                                        {
                                            <tr class="text-center">
                                                <td>@item.Name</td>
                                                <td>@item.Price</td>
                                                <td>@item.Quantity</td>
                                                <td>@(item.Price* item.Quantity)</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <h5>Subtotal</h5>
                            </div>
                            <div class="col-md-6">
                                <h5>LE @ViewBag.Total</h5>
                            </div>
                            <div class="col-md-6">
                                <h5>Shipping</h5>
                            </div>
                            <div class="col-md-6">
                                LE 10 <hr>
                            </div>
                            <div class="col-md-6">
                                <h5>Total</h5>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-success">@(ViewBag.Total + 10) EGP</h5>
                            </div>
                        </div>

                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Checkout Area =================-->
