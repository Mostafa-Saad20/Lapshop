@model Lapshop.Models.Customer

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
</section>
<!-- End Banner Area -->

<!--================ Profile Area =================-->
<section class="section_gap">
	<div class="container">
		<h3>My Profile</h3>
		<hr>
		<div class="row">
			<div class="col-lg-6">
				<h5>@Model.FirstName  @Model.LastName</h5>
				<h5 class="mt-3">@Model.Email</h5>

			</div>
			<div class="col-lg-6">
				<h5>Total Orders</h5>
				<h3 class="text-success">5</h3>
			</div>
		</div>
		<a asp-action="Logout" class="btn btn-danger mt-5">Logout</a>
	</div>
</section>
<!--================End Profile Box Area =================-->