@model IEnumerable<Lapshop.Models.AccessoryImages>

@{
    ViewData["Title"] = "EditImages";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

<h4>Edit Images</h4>
<hr>

<form asp-action="EditImages" asp-controller="Accessories" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label class="control-label" style="font-weight: bold">Add New Image/s</label>
        <input class="form-control mt-2" name="images" type="file" multiple>
        <p class="text-danger">@ViewBag.ErrorImage</p>
        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-primary mt-2 mb-3" />
        </div>
    </div>
</form>


<table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
        @foreach(var image in Model){
          <tr>
            <td>
                <img src="~/Images/Upload/AccessoryImages/@image.AccId/@image.ImageName" width="150" height="110">
            </td>
            <td>
                <a href="~/Accessories/DeleteImage/@image.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="red" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                    </svg>
                </a>
            </td>
          </tr>
        }
    </tbody>
</table>
