@model Lapshop.Models.Laptop

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}



<div>
    <a asp-action="Index">
        <i class="bi bi-arrow-left-circle"></i>
        Back to List
    </a>
</div>


<div class="mt-3">
    <h4>
        @Html.DisplayFor(model => model.Name) 
    </h4>
    <hr />

    <h5>
        Images
        <a asp-action="EditImages" asp-route-id="@Model?.Id"><i class="bi bi-pencil-square"></i></a>
    </h5>
    <div class="col-sm-10 mt-3">
        @foreach (var image in ViewBag.LaptopImages)
        {
            <img src="~/Images/Upload/LaptopImages/@image.LapId/@image.ImageName" width="150" height="110">
        }
    </div>

    <h5 class="mt-5">
        Specifications
        <a asp-action="EditDetails" asp-route-id="@Model?.Id"><i class="bi bi-pencil-square"></i></a>
    </h5>
    <dl class="row mt-3">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            RAM
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RAMSize) GB
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RAMType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RAMType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcessorBrand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcessorBrand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcessorType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcessorType)
        </dd>
        <dt class = "col-sm-2">
            CPU Max Speed
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CPU) GHz
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HDD)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HDD)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HasSSD)
        </dt>
        @if (Model.HasSSD)
        {
            <dd class="col-sm-10">Yes</dd>
        }
        else
        {
            <dd class="col-sm-10">No</dd>
        }
        <dt class = "col-sm-2">
            SSD Size
        </dt>
        @if (Model.SSD == null)
        {
            <dd class="col-sm-10">-</dd>
        }
        else
        {
            <dd class="col-sm-10">@Model.SSD GB</dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GPUBrand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GPUBrand)
        </dd>
        <dt class = "col-sm-2">
            GPU Size
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GPU) GB
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DisplaySize)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DisplaySize)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OS)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OS)
        </dd>
        <dt class = "col-sm-2">
            Width
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Width) cm
        </dd>
        <dt class = "col-sm-2">
            Length
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Length) cm
        </dd>
        <dt class = "col-sm-2">
            Weight
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weight) Kgm
        </dd>
        <dt class = "col-sm-2">
            Colour
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            Seller Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seller.FirstName) @Html.DisplayFor(model => model.Seller.LastName)
        </dd>
        <dt class="col-sm-2">
            Published at
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoldAt)
        </dd>

    </dl>
</div>

<div class="mt-5">
    <h5>Danger Zone</h5>
    <hr>
    <a href="~/Laptops/DeleteLaptop/@Model.Id" class="btn btn-danger">Delete Laptop</a>
</div>



